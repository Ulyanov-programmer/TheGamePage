@import '_mixins'

.header
  z-index 5
  height 100vh
  min-height 500px
  background url('../img/main-bg.webp') no-repeat center / cover fixed

  &__body
    position relative
    padding 10% 4% 10% 4%
    position absolute
    top 0
    left 0
    firstLevelElementsMargin 30

    *
      z-index 5

.navmenu
  &__body
    display flex
    height 100%

  &__list
    flex-set row wrap
    padding 0 5px 0 5px

    li
      flex-set row nowrap
      flex-content-position center center
      transition all 0.2s ease 0s

      &:not(:last-child)
        padding 0 35px 0 0

      a
        flex-set row nowrap
        flex-content-position center center
        flex 1 0 100%
        block-size 100% 100%
        font-size adapt-fsize(18)
        padding 10px 10px 2px 10px
        border-bottom 1px solid rgba(255, 255, 255, 0)
        transition all 0.2s ease

        &:hover, &:focus
          color #fff
          border-bottom-color #ffc600

.main-title
  display inline-block
  font-size adapt-fsize(60, 30)
  font-family MyriadPro-b
  color #fff
  line-height 0.9